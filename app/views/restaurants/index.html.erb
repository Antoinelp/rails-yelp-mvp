<h1>Restaurants</h1>

<%= link_to 'Add a restaurant', new_restaurant_path %>

<ul>
  <% @restaurants.each do |restaurant| %>
  <li>
    <strong><%= link_to restaurant.name, restaurant_path(restaurant) %></strong> -
    <%= restaurant.category.capitalize %>
    <em>(<%= restaurant.address %>)</em>
  </li>
  <% end %>
</ul>


